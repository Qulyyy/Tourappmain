<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:background="@drawable/rounded_background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="Зарегистрируйтесь"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:text="Пожалуйста, создайте аккаунт"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/loginInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:background="@drawable/rounded_edittext"
        android:hint="Леонардо Смит"
        android:inputType="textPersonName"
        android:padding="@dimen/padding_small"
        android:textSize="@dimen/text_size_medium" />

    <!-- Поле для имени -->

    <!-- Поле для email -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/rounded_edittext"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_small"
        android:textSize="@dimen/text_size_medium" />

    <!-- Поле для пароля -->
    <!-- Иконка для показа/скрытия пароля -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/rounded_edittext"
        android:drawableEnd="@android:drawable/ic_menu_view"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="@dimen/padding_small"
        android:textSize="@dimen/text_size_medium" />


    <!-- Кнопка "Зарегистрироваться" -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/blue_500"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/sign_in_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:text="Уже есть аккаунт? Войти"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Или свяжитесь"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/padding_medium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_small">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:layout_marginEnd="@dimen/padding_small"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twitter"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>