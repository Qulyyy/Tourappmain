<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Изображение (Rectangle 839) -->
        <ImageView
            android:id="@+id/tour_image"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img3"
            app:cardCornerRadius="16dp" />

        <!-- Название тура -->
        <TextView
            android:id="@+id/tour_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Niladri Reservoir"
            android:textSize="16sp"
            android:textColor="#1B1E28"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Местоположение с иконкой -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
            android:contentDescription="Location" />

            <TextView
                android:id="@+id/tour_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tekergat, Sunamgnj"
                android:textSize="14sp"
                android:textColor="#7D848D"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Цена -->
        <TextView
            android:id="@+id/tour_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$894/Person"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>