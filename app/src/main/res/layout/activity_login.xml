<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:background="@drawable/rounded_background"
    android:gravity="center">

    <!-- Заголовок "Войдите сейчас" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войдите сейчас"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/padding_medium" />

    <!-- Подзаголовок "Пожалуйста, войдите, чтобы продолжить" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пожалуйста, войдите, чтобы продолжить"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/padding_small" />

    <!-- Поле для email -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/rounded_edittext"
        android:padding="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_medium" />

    <!-- Поле для пароля -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_medium"
        android:background="@drawable/rounded_edittext"
        android:padding="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:drawableEnd="@android:drawable/ic_menu_view" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/loginProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_small" />

    <!-- Кнопка "Войти" -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="Войти"
        android:backgroundTint="@color/blue_500"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/padding_medium" />

    <!-- Ссылка "Нет аккаунта? Зарегистрируйтесь" -->
    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет аккаунта? Зарегистрируйтесь"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/padding_small" />

    <!-- Текст "Или подключитесь через" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Или подключитесь через"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/padding_medium" />

    <!-- Иконки социальных сетей (Facebook, Twitter) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_small">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:layout_marginEnd="@dimen/padding_small"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twitter"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>